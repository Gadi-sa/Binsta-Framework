{# {% extends 'layouts/app.twig' %} #}

{% block content %}
	<html>
		<head>
			<!-- Include tailwind and flowbite -->
			<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
			<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css" rel="stylesheet"/>
			<link
			rel="stylesheet" href="https://use.typekit.net/ola7wkx.css">
			<!-- Include animate.css -->
			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
			<!-- Include GSAP -->
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.10.4/dist/gsap.min.js"></script>
			<link
			href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

			<!-- Include Typed.js CDN in the head -->
			<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12" defer></script>

			<!-- Link to CSS file -->
			<link
			rel="stylesheet" href="/css/login.css">

			<!-- Link to JavaScript file -->
			<script src="/js/login_register.js" defer></script>

		</head>
		<body class="bg-gray-100">

			<div class="container mx-auto max-w-md mt-20 p-6 bg-white rounded shadow-xl animate__animated  animate__zoomInDown">
				<div class="text-center">
					<h1 class="text-3xl font-sm mb-6 text-gray-200 text-left">Login</h1>
				</div>
				<form method="post" action="/user/loginPost">
					<div class="mb-6 relative">
						<label id="label_user" for="username" class="absolute top-2 left-10 px-2 -mt-5 bg-white text-sm font-medium text-blue-600">Username</label>
						<input type="text" name="username" id="username" required class="appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 focus:border-2"/>
					</div>

					<div class="mb-6 relative">
						<label id="label_pass" for="password" class="absolute top-2 left-6 px-2 -mt-5 bg-white text-sm font-medium text-blue-600">Password</label>
						<input type="password" name="password" id="password" required class="appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 focus:border-2">
						<span
							id="togglePassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">
							<!-- Eye SVG for the closed state -->
							<svg aria-hidden="true" class="w-5 h-5 hover:text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
							</svg>

							<!-- Eye slash SVG for the open state -->
							<svg aria-hidden="true" class="w-5 h-5 hover:text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="red" style="display: none;">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1.933 10.909A4.357 4.357 0 0 1 1 9c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 19 9c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M2 17 18 1m-5 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
							</svg>
						</span>
					</div>


					{% if error_message %}
						<div class="bg-red-100 border border-red-400 text-red-700 px-3 py-1 rounded mt-4 mb-4 animate__animated  animate__wobble animate__repeat-3 animate__delay-1s">
							<span class="block">{{ error_message }}</span>
						</div>
					{% endif %}

					<div class="mb-4 ">
						<button type="submit" class="w-full py-1 px-3 text-white bg-blue-600 hover:bg-blue-800 rounded-md animate__animated animate__backInUp">Login</button>
					</div>
					<div id="typed-output" class="text-sm text-gray-500 mt-3 text-center animate__animated animate__pulse animate__infinite animate__delay-3s">
						Don't have an account?
						<a href="/user/register" class="text-blue-600 hover:underline">Register</a>
					</div>
				</form>

			</div>

			<div id="typing-text" class="text-center text-gray-700 text-2xl font-bold">
				<img src="/images/Binsta_logo.png" alt="Binsta Logo" class="w-36 h-auto block mx-auto">
			</div>


			<!-- flowbite/cdn source map -->
			<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>

		</body>
	</html>
{% endblock %}
