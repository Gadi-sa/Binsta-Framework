{# register.twig #}

{% block content %}
	<html>
		<head>
			<!-- Include tailwind -->
			<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
			<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css" rel="stylesheet"/>
			<link rel="stylesheet" href="https://use.typekit.net/ola7wkx.css">
			<link
			rel="stylesheet" href="https://use.typekit.net/ola7wkx.css">
			<!-- Include animate.css -->
			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
			<!-- Include GSAP -->
			<script src="https://cdn.jsdelivr.net/npm/gsap@3.10.4/dist/gsap.min.js"></script>

		</head>
		<body class="bg-gray-100">
			<div class="container mx-auto max-w-md mt-20 p-6 bg-white rounded shadow-xl animate__animated animate__zoomInUp">
				<h2 class="text-3xl font-sm mb-6 text-gray-300">Register</h2>
				<form method="post" action="/user/registerPost" enctype="multipart/form-data">
					<div class="mb-6 relative">
						<label id="label_user" for="username" class="absolute top-2 left-10 px-2 -mt-5 bg-white text-sm font-medium text-blue-600">Username</label>
						<input type="text" name="username" id="username" required class="appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 focus:border-2"/>
					</div>
					<div class="mb-6 relative">
						<label id="label_pass" for="password" class="absolute top-2 left-6 px-2 -mt-5 bg-white text-sm font-medium text-blue-600">Password</label>
						<input type="password" name="password" id="password" required class="appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 focus:border-2">
						<span
							id="togglePassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">
							<!-- Eye SVG for the closed state -->
							<svg aria-hidden="true" class="w-5 h-5 hover:text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
							</svg>
							<!-- Eye slash SVG for the open state -->
							<svg aria-hidden="true" class="w-5 h-5 hover:text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="red" style="display: none;">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242"></path>
							</svg>

						</span>
					</div>

					{# displays error and success messages in the registration form. #}
					<div class="my-4">
						{% if error_message %}
							<div class="bg-red-100 border border-red-400 text-red-700 px-3 py-1 rounded relative animate__animated  animate__wobble animate__repeat-3 animate__delay-1s" role="alert">
								<span class="block xs:inline">{{ error_message }}</span>
							</div>
						{% endif %}

						{% if success_message %}
							<div class="bg-green-100 border border-green-400 text-green-700 px-3 py-1 rounded relative animate__animated animate__tada animate__repeat-2 animate__delay-1s" role="alert">
								<span class="block xs:inline">{{ success_message }}</span>
							</div>
						{% endif %}
					</div>


					<div class="mb-4">
						<button type="submit" class="w-full py-2 px-3 text-white bg-blue-600 hover:bg-blue-800 rounded-md">Register</button>

						<p class="text-sm text-gray-500 mt-3 text-center animate__animated animate__pulse animate__infinite animate__delay-3s">Already have an account?
							<a href="/user/login" class="text-blue-500 hover:text-blue-700">Login</a>
						</p>
					</div>
				</form>
			</div>

			<!-- flowbite/cdn source map -->
			<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>


			<script>
			// You can access the gsap object directly since you've included it via CDN
			gsap.to("#label_user", { duration: 10, x: 200 });
			gsap.to("#label_pass", { duration: 6, x: 50 });
			</script>

		</body>
	</html>
{% endblock %}
